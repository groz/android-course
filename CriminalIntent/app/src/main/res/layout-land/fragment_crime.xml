<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_camera_and_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crime_details"
        style="?android:listSeparatorTextViewStyle"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/crime_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21 March, 2016"
            android:layout_weight="2"/>

        <CheckBox
            android:id="@+id/solved_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crime_solved_label"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/crime_suspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crime_suspect_text"
            android:layout_weight="1"
            style="?android:listSeparatorTextViewStyle"/>

        <Button
            android:id="@+id/crime_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crime_report_text"
            android:layout_weight="1"
            style="?android:listSeparatorTextViewStyle"/>

        <ImageButton
            android:layout_weight="1"
            android:src="@drawable/ic_call"
            android:id="@+id/crime_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crime_report_text"
            style="?android:listSeparatorTextViewStyle"
            android:contentDescription="Call suspect" />

    </LinearLayout>

</LinearLayout>
